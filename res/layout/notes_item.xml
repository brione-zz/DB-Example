<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:stretchColumns="0,1"
	android:shrinkColumns="0,1"
>
	<TextView 
		android:id="@+id/client_note_client"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:textStyle="bold"
		android:hint="@string/ClientNotes_Client_Hint"
	/>
	<TextView
		android:id="@+id/client_note_date"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:textStyle="bold"
		android:hint="@string/ClientNotes_Date_Hint"
	/> 
	<TextView
		android:id="@+id/client_note_text"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:layout_below="@id/client_note_client"
		android:hint="@string/ClientNotes_Text_Hint"
	/> 
</RelativeLayout>
